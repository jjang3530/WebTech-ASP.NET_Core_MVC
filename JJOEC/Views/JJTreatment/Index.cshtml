@model IEnumerable<JJOEC.Models.Treatment>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = $"Treatments for plot {Context.Session.GetString("plotId")} at {Context.Session.GetString("farmName")}";
    ViewData["plotId"] = Context.Session.GetString("plotId");
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moisture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yield)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Plot)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Index" asp-controller="JJTreatmentFertilizer"
                       asp-route-treatmentId="@item.TreatmentId" asp-route-treatmentName="@item.Name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                <td>
                    @Html.DisplayFor(modelItem => item.Moisture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yield)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Plot.PlotId)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TreatmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TreatmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TreatmentId">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                <a asp-action="Index" asp-controller="JJPlot" asp-route-identifyCriteria="T"
                   asp-route-plotId=@ViewData["plotId"]>Back to Plot</a>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>